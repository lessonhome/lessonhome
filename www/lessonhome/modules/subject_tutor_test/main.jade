
.js-panel
  .js-active_block
    .subject_block!= select_subject_field
    .btn_panel
      a(href="#", title="Удалить").js-rem
        i.icon
      a(href="#", title="Свернуть/Развернуть").js-expand
        i.icon
    .err.js-error_name
  .js-restore_block
    .text
      .js-name_subject
    .btn_panel
      a(href="#", title="Восстановить").btn.js-restore Нет
      a(href="#", title="Удалить").btn.js-delete Да

