mixin item (progress, value_src, href, selector)
  - href = href || '';
  - src = F(value_src);
  if href
    a(href=href class = selector)
      if progress
        .progress.block
          .value(style = "background: url(#{src}) no-repeat center")
      else
        .block
          .value(style = "background: url(#{src}) no-repeat center")
  else
    .panel(class = selector)
      if progress
        .progress.block
          .value(style = "background: url(#{src}) no-repeat center")
      else
        .block
          .value(style = "background: url(#{src}) no-repeat center")

//- --------------------------------------------------------
//width: 56px
//padding: 25px
- var widthBlue = 56 + 2*25
.container
  case progress
    when 1
      - var src_1 = 'fastbid_1-active.png'
      - var src_2 =  'application_2.png'
      - var src_3 = 'application_3.png'
      +item(1, src_1, false, 'one')
      +item(false, src_2, false)
      +item(false, src_3, false, 'third')
      - widthBlue = widthBlue*(progress-1)
    when 2
      - var src_1 = 'fastbid_1-done.png'
      - var src_2 =  'fastbid_2-active.png'
      - var src_3 = 'application_3.png'
      +item(1, src_1, 'first_step', 'one')
      +item(2, src_2, false)
      +item(false, src_3, false, 'third')
      - widthBlue = widthBlue*(progress-1)
    when 3
      - var src_1 = 'fastbid_1-done.png'
      - var src_2 =  'fastbid_2-done.png'
      - var src_3 = 'fastbid_3-active.png'
      +item(1, src_1, 'first_step', 'one')
      +item(2, src_2, 'second_step')
      +item(3, src_3, false, 'third')
      - widthBlue = widthBlue*(progress-1)
  .line_box
    .gray_line
    .blue_line(style='width: #{widthBlue}px')