.wrap
  h1 Заявка
  mixin field(value, placeholder)
    input(value=value || '', placeholder=placeholder, type="text")&attributes(attributes)
  .block_info
    .left
      .form
        .form-block
          .form-label
            label Заявка
          .form-field
            select(name="process").js-process
              option(value='wait') Старт
              option(value='perform') Назначена на исполнение
              option(value='to_pay') К оплате
              option(value='payed') Завершено
        .form-block
          .form-label
            label Имя
          .form-field
            +field(value.name, "Имя")(name='name').js-name
        .form-block
          .form-label
            label Телефон
          .form-field
            +field(value.phone, "Телефон")(name='phone').js-phone
        .form-block
          .form-label
            label E-mail
          .form-field
            +field(value.email, "E-mail")(name='email').js-email
        .form-block
          .form-label
            label Предмет
          .form-field
            div.input!=subjects
        .form-block
          .form-label
            label Статус
          .form-field.js-status
            each v, key in obj_status
              label
                input(type='checkbox', value=key, checked=value.status && value.status[key] ? true : undefined)
                !=v
        .form-block
          .form-label
            label Пол
          .form-field.js-gender
            label
              input(type='radio', value='male', name='sex', checked= value.gender === 'мужской' || value.gender === 'male')
              !='Мужской'
            label
              input(type='radio', value='female', name='sex', checked= value.gender === 'женский' || value.gender === 'female')
              !='Женский'
            label
              input(type='radio', value='', name='sex', checked= !value.gender || value.gender === 'неважно' || value.gender === 'не важно')
              !='Не важно'


        .form-block
          .form-label
            label Дата
          .form-field
            span!=new Date(value.time).toLocaleDateString()

    .right
      .form
        .form-block
          .form-label.title
            label Желаемая цена:
          .form-field.bottom.js-price
            each v, key in price
              label
                input(type='checkbox', value=v, checked=value.want_price[v])
                !=v
        .form-block
          .form-label.title
            label Цена за занятие:
          .form-field.bottom
            +field(value.end_price, "Цена")(name="end_price").js-end_price
        .form-block
          .form-label.title
            label Занятий в неделю:
          .form-field.bottom
            +field(value.end_price, "Количество занятий")(name="count").js-count
        .form-block
          .form-label.title
            label Планируемых недель:
          .form-field.bottom
            +field(value.end_price, "Количество недель")(name="count_week").js-count_week
        .form-block
          .form-label.title
            label Вероятность срыва курса:
          .form-field.bottom
            +field(value.end_price, "Проценты")(name="end_price").js-end_price
        .form-block
          .form-label.title
            label Вероятность отмены/болезни:
          .form-field.bottom
            +field(value.end_price, "Проценты")(name="count").js-count
        .form-block
          .form-label.title
            label Вероятность дополнительных занятий:
          .form-field.bottom
            +field(value.end_price, "Проценты")(name="count_week").js-count_week
  .form
    .form-block
      .form-label.title
        label Комментарий:
      .form-field.bottom
        textarea(rows=5, value=value.comment).js-comment
    .form-block
      .form-field.bottom
        label
          input(type='checkbox', value='moderate', checked=value.moderate ? true : undefined).js-moderate
          !='Завершить модерацию'




  input(type='hidden', value=value._id, name="index").js-index
  input(type='hidden', value=value.id, name="executor").js-index_tutor
each v, index in value.link_detail
  a(href="#", title="Назначить на заявку", data-index=index).show(class=index == value.id ? 'selected' : '')
    -var p;
    -for(p in v.photos) continue;
    img(src="#{v.photos[p].hurl}", width=150, style="margin-left: 10px")
.js-about_tutor(style="display: none")
  img.js-avatar(width=100)
  p.js-name
  a(href="#").js-to_profile На профиль репетитора
  br
  a(href="#").js-make Назначить исполнителем

a(href="#").js-save Сохранить