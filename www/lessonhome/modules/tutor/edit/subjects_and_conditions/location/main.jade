mixin info_block(block_class, header, value)
  .div(class=block_class)
    .m-title= header
    .value!= value


+info_block('location', 'Место:', location)
+info_block('country', 'Страна:', country)
+info_block('city', 'Город:', city)
+info_block('district', 'Район:', district)
+info_block('nearest_metro', 'Ближайшее метро:', nearest_metro)
+info_block('street', 'Улица:', street)
+info_block('house', 'Дом:', house)
+info_block('building', 'Строение:', building)
+info_block('flat', 'Кв.:', flat)

.button_block
  .add_button!= add_button

.button_block
  .save_button!= save_button

