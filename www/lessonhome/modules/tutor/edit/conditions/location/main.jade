mixin info_block(block_class, header, label_selector, value)
  label(for=label_selector, class=block_class)
    .value.g-standardField!=value
    .m-title.g-edit-smallTitle=header

.block
  .location
    .m-title.g-edit-smallTitle Место :
    .value
      .tutor!= tutor
      .student!= student
      .web!= web

  +info_block('country', 'Страна :', 'country_label', country)
  +info_block('city', 'Город :', 'city_label', city)
  +info_block('district', 'Район :', 'district_label', district)
  +info_block('nearest_metro', 'Ближайшее метро :', 'nearest_metro_label', nearest_metro)
  +info_block('street', 'Улица :', 'street_label', street)

  .line
    +info_block('house', 'Дом :', 'house_label', house)
    +info_block('building', 'Строение :', 'building_label', building)

  //-.house_block
    label(for="house_label").house!= house

    .value
      label(for="house_label").house!= house
      label(for="building_label").building
        .value!= building
        .m-title.g-edit-smallTitle Строение :
    .m-title.g-edit-smallTitle Дом :
  .flat_block
    +info_block('flat', 'Кв. :', 'flat_label', flat)

  .button_block
    .add_button!= add_button

  .button_block
    .save_button!= save_button



