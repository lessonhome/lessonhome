mixin info_block(block_class, header, value)
  label(class=block_class)
    .value.g-standardField!= value
    .m-title.g-edit-smallTitle.select= header



.block

  +info_block('first_name', 'Имя :', first_name)
  +info_block('second_name', 'Фамилия :', second_name)
  +info_block('patronymic', 'Отчество :', patronymic)
  .sex
    .value.g-standardField
      .sex_man!= sex_man
      .sex_woman!= sex_woman
    .m-title.g-edit-smallTitle.select Пол :

  .line
    label.date_of_birth
      .value
        .day!= birth_day
      .m-title.g-edit-smallTitle.select Дата рождения :
    label.month!= birth_month
    label.year.g-smallField!= birth_year

  +info_block('status', 'Статус :', status)

  .button_block
    .save_button!= save_button

.hint!= hint
