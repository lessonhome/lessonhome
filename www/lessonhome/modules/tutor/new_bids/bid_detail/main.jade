p!=new Date(value.time).toLocaleString()
mixin field(value, placeholder)
   input(value!=value || '', placeholder!=placeholder)&attributes(attributes)
+field(value.name, "Имя")(name='name').js-name
br
+field(value.phone, "Телефон")(name='phone').js-phone
br
+field(value.email, "E-mail")(name='email').js-email
br
+field(value.email, "Цена руб./ч.")(name='price').js-price
br
!=subjects
input(type='hidden', value!=value._id, name="index").js-index
input(type='hidden', value!=value.app_tutor, name="executor").js-index_tutor
br
.js-status
   each v, key in obj_status
      label
         input(type='checkbox', value!=key, checked=value.status && value.status[key] ? true : undefined)
         !=v
      br
br
.js-sex
   each v in gender
      label
         input(type='radio', value!=v, name='sex')
         !=v
      br
br
