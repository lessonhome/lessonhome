  //header, text - content
  // selector - style sass

- field_position = field_position || "";

if selector == 'small'
  .hint(class='small').select
    .sign
    .field(class=field_position).hidden
      .text!= text
        .angle
else
  if selector == 'horizontal_hide_ability'
    .hint.horizontal_hide_ability.select
      .top_block
        .hide_block
          .button.open
            .icon
            .text скрыть
      .bottom_block
        .question_sign_block
        .text!= text
  else
    .hint(class=selector).select
      .question_sign_block
      .header!= header
      .text!= text
      if separate_line
        .separate_line!= separate_line