mixin item (progress, content, href, selector,isCurrent)
  - href = href || '';
  if href
    a(href=href class = selector)
      if progress
        if isCurrent
          .progress.block.current
            .value=content
        else
          .progress.block
            .value=content
      else
        if isCurrent
          .block.current
            .value=content
        else
          .block
            .value=content
  else
    .panel(class = selector)
      if progress
        if isCurrent
          .progress.block.current
            .value=content
        else
          .progress.block
            .value=content
      else
        if isCurrent
          .block.current
           .value=content
        else
          .block
            .value=content
