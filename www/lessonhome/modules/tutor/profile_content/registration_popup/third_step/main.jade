mixin field (selector, title, value)
  label(class=selector)
    .title.select=title
    .value!= value

.fields
  +field ('subject', 'Предмет :', subject)
  +field ('categories', 'Разделы :', categories)
  +field ('directions', 'Направления :', directions)
  +field ('categories_of_students', 'Категории учеников :', categories_of_students)
  +field ('place', 'Место :', place)

  label.price
    .title.select Цена :
    .value!= price
    .price_button!= price_button
  .line
    label.group_lessons
      .title.select Групповые занятия :
      .value
        .students_in_group!= students_in_group
    label.group_lessons_bet!= group_lessons_bet

  +field ('comments', 'Комментарии :', comments)

  .button_block
    .add_button!= add_button

