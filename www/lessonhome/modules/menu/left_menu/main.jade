// active_part_of_li - часть которая выделяется в li при наведении
// .active - выделенный элемент
ul
  each href, title in items
    li
      if title == active_item
        a(href=href)
          .active_part_of_li.active
            .title= title
      else
        a(href=href)
          .active_part_of_li
            .title= title

