link(href=F("nouislider/nouislider.css"), rel="stylesheet")
.container
  .row
    .col.l4.m4.s12.search-filter
      ul.collapsible(data-collapsible='expandable').search-filter
        li
          .collapsible-header.active Предмет
          .collapsible-body
            .row.no-bottom-margin
              .input-field.col.s12
                select(multiple).megaselect
                  each groups in subject_list
                    optgroup(label!=groups.group)
                      option(value='', selected, disabled) Выберете предмет
                      each val, index in groups.items
                        option(value!=index)!=val

            .row.no-bottom-margin
              .input-field.col.s12
                select(multiple).megaselect
                  option(value='', disabled, selected) Направление подготовки
                  each val, index in training_direction.items
                    option(value=!index)!=val
            .row.no-bottom-margin
              .input-field.col.s12
                select(multiple).megaselect
                  option(value='', disabled, selected) Категория ученика
                  each val, index in category_of_student.items
                    option(value=!index)!=val
        li
          .collapsible-header.active Цена
          .collapsible-body
            .row
              .col.s12
                .js-range_ui#slider
            .row
              .input-field.col.s6
                input(type='text', value!=value.filter.price.left)#pricemin
              .input-field.col.s6
                input(type='text', data-value!=value.default_filter.price.right, value!=value.filter.price.right)#pricemax
        li
          .collapsible-header.active.selected Место Занятий
          .collapsible-body
            .row
              .col.s12category_of_student
                input(type='checkbox')#loc1
                label(for='loc1') У себя
            .row
              .col.s12
                input(type='checkbox')#loc2
                label(for='loc2') У репетитора
            .row
              .col.s12
                input(type='checkbox')#loc3
                label(for='loc3') Удалённо
        li
          .collapsible-header Статус репетитора
          .collapsible-body
            .row
              .col.s12
                input(type='checkbox')#status1
                label(for='status1') Студент
            .row
              .col.s12
                input(type='checkbox')#status2
                label(for='status2') Преподаватель школы
            .row
              .col.s12
                input(type='checkbox')#status3
                label(for='status3') Преподаватель ВУЗа
            .row
              .col.s12
                input(type='checkbox')#status4
                label(for='status4') Частный преподаватель
            .row
              .col.s12
                input(type='checkbox')#status5
                label(for='status5') Носитель языка
        li
          .collapsible-header.selected Опыт
          .collapsible-body
            .row
              .col.s12
                input(type='checkbox')#exp1
                label(for='exp1') 1-2 года
            .row
              .col.s12
                input(type='checkbox')#exp2
                label(for='exp2') 3-4 года
            .row
              .col.s12
                input(type='checkbox')#exp3
                label(for='exp3') более 4 лет
        li
          .collapsible-header Груповые занятия
          .collapsible-body
            .row.no-bottom-margin
              .input-field.col.s12
                select(multiple).megaselect
                  option(value='', disabled, selected) Не важно
                  option(value='1') Не важно
                  option(value='2') 2-4 ученика
                  option(value='3') до 8 учеников
                  option(value='4') от 10 учеников
        li
          .collapsible-header Пол
          .collapsible-body
            .row.no-bottom-margin
              .col.s12
                input(name='sex', type='radio', id='sex_radio_1', checked='checked').with-gap
                label(for='sex_radio_1') Не выжно
            .row.no-bottom-margin
              .col.s12
                input(name='sex', type='radio', id='sex_radio_2').with-gap
                label(for='sex_radio_2') Мужской
            .row.no-bottom-margin
              .col.s12
                input(name='sex', type='radio', id='sex_radio_3').with-gap
                label(for='sex_radio_3') Женский

      .row
        .input-field.col.s12.center-align
          button.btn Применить


    .col.l8.m8.s12
      .js-tutors_list
        !=tutor
script(src=F("nouislider/nouislider.js"))