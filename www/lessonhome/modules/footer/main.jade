mixin item(title, link)
  .item
    a(href=link)
      .title=title

.top_block
  .icon.classmates
  .icon.vk
  .icon.fb
  .icon.google
  .icon.twitter

.line

.bottom_block
  .dashed_line
  .left_block
    .logo!= logo
    .company_name &copy 2014 Lessonhome.ru
  .dashed_line
  .center_block.unselect
    +item('Поиск', '/first_step')
    +item('Оформить заявку', '/fast_bid/first_step')
    +item('Документы', '#')
    +item('Помощь', '#')
  .dashed_line
  .right_block
    .address_block
      .icon
      .address!= '121087, Россия, г. Москва,<br>Береговой проезд 2с3'
    .post_block
      .icon
      .post support@lessonhome.ru
    .phone_block
      .icon
      .value
        .phone 8 (666)-555-88-77
        .callback
         .click_box Заказать звонок
         .popup_box!= callback_popup

