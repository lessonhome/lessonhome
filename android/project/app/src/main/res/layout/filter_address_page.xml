<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/address_words"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/address_words"
        android:padding="25dp"
        android:completionThreshold="1" />

    <Button
        android:id="@+id/meeting_at_the_tutor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/meeting_at_the_tutor"/>
    <Button
        android:id="@+id/meeting_at_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/meeting_at_me"
        android:layout_toRightOf="@+id/meeting_at_the_tutor"
        android:layout_toEndOf="@+id/meeting_at_the_tutor"  />
    <Button
        android:id="@+id/meeting_online"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/meeting_online"
        android:layout_below="@+id/meeting_at_the_tutor" />




    <MultiAutoCompleteTextView
        android:id="@+id/enter_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_address"
        android:layout_below="@+id/meeting_online"
        android:padding="25dp"
        android:completionThreshold="1" />


    <Button
        android:id="@+id/next_in_filter_viewPager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/enter_address"
        android:gravity="center"
        android:text="@string/next_in_filter_viewPager" />
</RelativeLayout>